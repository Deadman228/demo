<Window x:Class="Test.Windows.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Авторизация" Height="400" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Авторизация" Margin="0 0 0 60" FontSize="20"/>
            <TextBlock Text="Логин:"/>
            <TextBox x:Name="Login"/>
            <TextBlock Text="Пароль:"/>
            <PasswordBox x:Name="Password"/>
            <Button x:Name="BtLogin" Content="Войти" Background="{StaticResource AddColor}" Margin="0 5"
                    Click="BtLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>
